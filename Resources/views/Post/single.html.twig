{% extends 'MayecoPostBundle::twbslayout.html.twig' %}

{%- block body -%}

    <h1>{{ post.titulo }}</h1>
    <p>{{ post.texto }}</p>

    <ul>
        {% for comment in post.children %}
            <li>
                <h3>{{ comment.titulo }}</h3>
                <p>{{ comment.texto }}</p>
            </li>
        {% endfor %}
    </ul>

{%- endblock -%}
